<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vaishnavirachapudi.myexpenseapp.LoginFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_login"
            android:layout_marginTop="73dp"
            android:hint="Email"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password_login"
            android:layout_below="@+id/email_login"
            android:hint="Password"
            android:layout_alignParentStart="true"
            android:layout_marginTop="51dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_fragment_"
            android:id="@+id/login_login"
            android:layout_below="@+id/password_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="77dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_fragment_create"
            android:id="@+id/login_create"
            android:layout_below="@+id/login_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp" />
    </RelativeLayout>
</FrameLayout>
