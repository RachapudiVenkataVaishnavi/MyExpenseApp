<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vaishnavirachapudi.myexpenseapp.SignUpFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fullname_signup"
            android:hint="Full name"
            android:layout_marginTop="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_signup"
            android:hint="Email"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/fullname_signup"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password_signup"
            android:hint="Password"
            android:layout_below="@+id/email_signup"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_signup"
            android:layout_marginTop="69dp"
            android:layout_below="@+id/password_signup"
            android:layout_alignParentStart="true"
            android:text="@string/signup_fragment_signup" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signup_fragment_cancel"
            android:id="@+id/signup_cancel"
            android:layout_marginTop="54dp"
            android:layout_below="@+id/button_signup"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</FrameLayout>
